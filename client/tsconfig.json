{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
			"*": ["node_modules/*"],
      "@/src/*": ["./src/*"],
      "@/*": ["./*"],
      "@": ["./src/index"],
      "Backend" : ["src/Backend"],
      "Frontend": ["./src/Frontend"],
      "ContextProxy": ["./src/Frontend/ContextProxy"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
